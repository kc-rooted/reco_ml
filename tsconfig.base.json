{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "paths": {
      "@gears/core": ["./packages/core/src"],
      "@gears/core/*": ["./packages/core/src/*"],
      "@gears/shared-ui": ["./packages/shared-ui/src"],
      "@gears/shared-ui/*": ["./packages/shared-ui/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
